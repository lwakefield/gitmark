{
  "manifest_version": 2,
  "name": "Gitmark",
  "version": "1.0.1",
  "author": "Lawrence Wakefield <lawrence@iamlawrence.me>",

  "description": "gitmark is a dead simple bookmarking browser extension that saves bookmarks to a GitHub repository.",

  "homepage_url": "https://gitmark.lwakefield.now.sh/",

  "icons": {
    "48": "red_book.svg",
    "96": "red_book.svg"
  },

  "permissions": [
    "activeTab",
    "storage"
  ],

  "browser_action": {
    "default_title": "Add Bookmark",
    "default_popup": "index.html",
    "default_icon": "red_book.svg"
  },

  "options_ui": {
    "page": "config.html",
    "browser_style": true
  }

}
